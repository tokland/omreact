{
    "rules": {
        "indent": ["error", 2],
        "quotes": [
            2,
            "double"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }]
    },
    "parserOptions": {
      "sourceType": "module",
    },
    "env": {
        "es6": true,
        "browser": true,
        "jest/globals": true
    },
    "parser": "babel-eslint",
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "plugins": [
        "react",
        "jest"
    ]
}